<%= form_tag do %>
<h1>What would you like to order today?</h1>
<h2>Black Milk Tea</h2>
<h2>Green Milk Tea</h2>
<h2>Black Tea</h2>
<h2>Green Tea</h2>
<h2>Mango Green Tea</h2>
<h2>Passion Fruit Green Tea</h2>
<h3>Drink</h3>
<select name="user[role_id]">
  <option value="" selected="selected">Please select</option>
  <option value="1">Black Milk Tea</option>
  <option value="2">Green Milk Tea</option>
  <option value="2">Black Tea</option>
  <option value="2">Green Tea</option>
  <option value="2">Mango Green Tea</option>
  <option value="2">Passion Fruit Green Tea</option>
</select>
<h3>Toppings</h3>
<div>
<%= check_box_tag "Boba", '1', checked=false, id:"boba" %> Boba
<%= check_box_tag "Lychee Jelly", '2', checked=false, id:"boba" %> Lychee Jelly
<%= check_box_tag "Pudding", '2', checked=false, id:"boba" %> Pudding
</div>
<h3>Ice Levels</h3>
<select name="user[role_id]">
  <option value="" selected="selected">Please select</option>
  <option value="1">100%</option>
  <option value="2">75%</option>
  <option value="2">50%</option>
</select>
<h3>Sugar Levels</h3>
<select name="user[role_id]">
  <option value="" selected="selected">Please select</option>
  <option value="1">100%</option>
  <option value="2">75%</option>
  <option value="2">50%</option>
</select>
<%= submit_tag("Submit") %>
<% end %>